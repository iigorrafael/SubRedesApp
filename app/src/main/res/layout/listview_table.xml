<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="br.com.igor.subredesapp.MainActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:padding="20dp"
        android:weightSum="100">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textAlignment="center"
            android:textSize="18sp" />

        <TableRow>

            <TextView
                android:id="@+id/textViewRede"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="50" />

            <TextView
                android:id="@+id/textViewRedeIP"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="50" />

        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/textViewPrimeiroHost"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="50" />

            <TextView
                android:id="@+id/textViewPrimeiroHostIP"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="50" />

        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/textViewUltimoHost"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="50" />

            <TextView
                android:id="@+id/textViewUltimoHostIP"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="50" />

        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/textViewBroadcast"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="50" />

            <TextView
                android:id="@+id/textViewBroadcastIP"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="50" />

        </TableRow>
    </TableLayout>

</LinearLayout>